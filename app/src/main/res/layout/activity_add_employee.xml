<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEmployeeActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:fontFamily="@font/jost_variablefont"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="15dp"
            android:textColor="@color/mygreen"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:paddingStart="15dp"
            android:background="@drawable/back_edit"
            android:fontFamily="@font/jost_variablefont"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Number :"
            android:fontFamily="@font/jost_variablefont"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingStart="15dp"
            android:textColor="@color/mygreen"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/edit_id_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Id number"
            android:background="@drawable/back_edit"
            android:paddingStart="15dp"
            android:fontFamily="@font/jost_variablefont"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email :"
            android:fontFamily="@font/jost_variablefont"
            android:textStyle="bold"
            android:paddingStart="15dp"
            android:textColor="@color/mygreen"
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>
        <EditText
            android:id="@+id/edit_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="email"
            android:background="@drawable/back_edit"
            android:paddingStart="15dp"
            android:fontFamily="@font/jost_variablefont"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/date_picker_birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Employee BirthDate"
            android:fontFamily="@font/jost_variablefont"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:backgroundTint="@color/mygreen"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/mygreen"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>